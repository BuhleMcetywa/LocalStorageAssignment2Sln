<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalStorageAssignment2.MainPage">

    <VerticalStackLayout>
        
            
        <Label Text="Name"/>
        <Entry x:Name="NameEntry" />

        <Label Text="Surname" />
        <Entry x:Name="SurnameEntry" />

        <Label Text="Email Address" />
        <Entry x:Name="EmailEntry" />

        <Label Text="Bio" />
        <Editor x:Name="BioEditor" />

        <Button Text="Save" Clicked="OnSaveClicked" />
        <Image x:Name="profileImage" HeightRequest="150" WidthRequest="150"/>
            <Button Text="Select Picture" Clicked="OnSelectPictureClicked"/>
        
    </VerticalStackLayout>

</ContentPage>
